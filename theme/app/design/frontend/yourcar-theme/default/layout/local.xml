<layout version="0.1.0">
	<default>
		<reference name="head">
			<!-- Adding Javascripts -->
	      	<action method="addItem">
		        <type>skin_js</type>
		        <name>js/jquery.min.js</name>
		    </action>
		    <action method="addItem">
		        <type>skin_js</type>
		        <name>js/bootstrap/bootstrap.min.js</name>
		    </action>
		    <action method="addItem">
		        <type>skin_js</type>
		        <name>js/vendor/scripts.min.js</name>
		    </action>
		    <action method="addItem">
		        <type>skin_js</type>
		        <name>js/html5shiv.min.js</name>
		        <params/>
		        <if>lt IE 9</if>
		    </action>
		    <action method="addItem">
		        <type>skin_js</type>
		        <name>js/respond.min.js</name>
		        <params/>
		        <if>lt IE 9</if>
		    </action>

	      	<!-- Removing the styles.css -->
		    <action method="removeItem">
		        <type>skin_css</type>
		        <name>css/styles.css</name>
		    </action>
		    <!-- Adding Bootstrap Css -->
		    <action method="addCss">
		        <stylesheet>css/bootstrap.css</stylesheet>
		    </action>
		    <!-- Adding the styles.css -->
		    <action method="addItem">
		        <type>skin_css</type>
		        <stylesheet>css/styles.css</stylesheet>
		    </action>

			
		</reference>

	</default> 